using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;
using System.Text;
using System.Text.RegularExpressions;
using System.Threading.Tasks;

namespace ForecastDate
{
    class ForecastFiles
    {
        
        public void ReadFile(string fileName)
        {
            if (File.Exists(fileName))
            {
                using (StreamReader sr = File.OpenText(fileName))
                {
                    string input;
                    while ((input = sr.ReadLine()) != null)
                    {
                        List<String>textFiles = input.Split(',').ToList();
                    }
                }
            }
            else
            {
                Console.WriteLine("File could not be found");
            }
        }

        public void DisplayFileContents()
        {
            foreach (var line in textFile)
            {
                Console.WriteLine(line);
            }
        }

        //Code be named GetDates
        public void ChangeDates()
        {
            string datePattern = @"\d{2}/\d{2}/\d{4}";
            for (int i = 0; i < textFile.Count; i++)
            {
                if (Regex.IsMatch(textFile[0], datePattern))
                {
                    textFile[0] = DateTime.Today.AddDays(8).ToString("dd /MM/yyyy");
                }
                else
                {
                    //do thing
                }

                //Console.WriteLine(Regex.IsMatch(text, datePattern) ? text : text + " is not a date");
            }
        }

        List<string> textFile = new List<string>();

    }
}
